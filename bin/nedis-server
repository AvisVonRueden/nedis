#!/usr/bin/env node


/**
 * Module dependencies.
 */

try {
  var nedis = require('nedis');
} catch (err) {
  var nedis = require('../');
}

/**
 * Arguments.
 */

var args = process.argv.slice(2);

/**
 * Server options.
 */

var options = {
  debug: ~args.indexOf('--debug') || ~args.indexOf('-d')
};

/**
 * Port number.
 */

var port;
var index;

if (~(index = args.indexOf('--port')) || ~(index = args.indexOf('-p'))) {
  port = args[index+1];
}

// Start server

var server = nedis.createServer(options).listen(port);
console.log('Nedis started on port %d', server.address().port);
